{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates the AWS resources required by the MediaPipeline",

    "Parameters": {
        "S3BucketName": {
            "Type": "String"
        },
        "S3ArchivePrefix": {
            "Type": "String"
        },
        "S3InputPrefix": {
            "Type": "String"
        },
        "S3OutputPrefix": {
            "Type": "String"
        },
        "S3CoverArtPrefix": {
            "Type":"String"
        },
        "DDBFileTable": {
            "Type": "String"
        },
        "DDBArchiveTable": {
            "Type": "String"
        },
        "DDBTitleTable": {
            "Type": "String"
        }
    },
    "Mappings": {

    },
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {"Ref": "S3BucketName"},
                "LifecycleConfiguration": {
                    "Rules": [
                        { 
                            "Prefix": {"Ref": "S3ArchivePrefix"},
                            "Transition": {"StorageClass": "Glacier", "TransitionInDays": "30"}
                        },
                        {
                            "Prefix": {"Ref": "S3InputPrefix"},
                            "ExpirationInDays": "5"
                        },
                        {
                            "Prefix": {"Ref": "S3OutputPrefix"},
                            "ExpirationInDays": "30"
                        },
                        {
                            "Prefix": {"Ref": "S3CoverArtPrefix"},
                            "ExpirationInDays": "10"
                        }
                    ]
                }

            }
        },
        "MediaFileTable": {
            "TableName": {"Ref": "DDBFileTable"},
            "ProvisionedThroughput": {"ReadCapacityUnits": "10", "WriteCapacityUnits": "10"},
            "KeySchema": [
                {
                    "AttributeName": "LOCAL_FILE_PATH",
                    "KeyType": "HASH"
                },
                {
                    "AttributeName": "LOCAL_DIR",
                    "KeyType": "RANGE"
                }
            ]
        },
    },
    "Outputs": {

    }
}